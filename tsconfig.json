{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strictBindCallApply": true,
    "strictNullChecks": false,
    "strict": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "outDir": "dist",
    "incremental": true,
    "skipLibCheck": true,
    "sourceMap": true,
  },
  "include": [
    "src"
  ]
}
